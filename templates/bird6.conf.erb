<%- bird = node['bird']['conf']['ipv6'] %>
<%- bird['log'].each do |k, v| %>
log <%= k %> <%= v %>;
<%- end %>
router id <%= bird['router-id'] %>;

<%- bird['filter'].each do |rulename, rulelist| -%>
filter <%= rulename %> {
  <%- rulelist.each do |rule| %>
  <%= rule %>
  <%- end %>
}
<%- end %>

<%- bird['protocol'].each do |protoname, protohash| %>
protocol <%= protoname %> {
  <%- protohash.each do |k, v| %>
  <%= k %> <%= v %>;
  <%- end %>
}
<%- end %>
